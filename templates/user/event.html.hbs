<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>My Event</title>
  <link rel="stylesheet" href="/static/css/bootstrap.css"/>
  <link rel="stylesheet" href="/static/css/app.css"/>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
  <div class="container">
    <a class="navbar-brand" href="/">FESD</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <form action="/logout" method="post" class="d-inline">
            <button class="btn btn-sm btn-outline-secondary" type="submit">Logout</button>
          </form>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <div class="d-flex align-items-center mb-3">
    <h1 class="h4 mb-0">{{event.name}}</h1>
    <span class="ms-3 badge bg-info text-dark">{{event.state}}</span>
  </div>
  {{#if event.description}}
    <p class="text-muted">{{event.description}}</p>
  {{/if}}

  <div class="row g-4">
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header">Your profile</div>
        <div class="card-body">
          <form action="/event/name" method="post">
            <div class="mb-2">
              <label for="name" class="form-label">Your name</label>
              <input id="name" name="name" type="text" class="form-control" value="{{participant.name}}" placeholder="Enter your name" required/>
            </div>
            <button class="btn btn-sm btn-primary" type="submit">Save</button>
          </form>
        </div>
      </div>
    </div>
    <p class="text-danger mb-0">Remember to press "Save all preferences" after selecting your preferences!</p>
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">Slots and sessions</div>
        <div class="card-body">
          {{!-- Global notices --}}
          {{#if is_open}}
            {{#unless has_any_selection}}
              <div class="alert alert-info" role="alert">
                You haven't chosen any session preferences yet. Please select your first, second, and third choices for each slot.
              </div>
            {{/unless}}
          {{/if}}
          {{#if is_finished}}
            {{#unless has_any_assignment}}
              <div class="alert alert-warning" role="alert">
                You didn't get into any sessions. If there are still seats available, please contact the organizer.
              </div>
            {{/unless}}
          {{/if}}

          {{#if view_slots.[0]}}
          {{#if is_finished}}
            {{#each view_slots}}
              <div class="mb-3" id="slot-{{uuid}}">
                <div class="d-flex align-items-center mb-2">
                  <h2 class="h6 mb-0">{{name}}</h2>
                  {{#if description}}<span class="ms-2 text-muted small">{{description}}</span>{{/if}}
                </div>
                <ul class="list-group">
                  {{#if sessions.[0]}}
                    {{#each sessions}}
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <div class="fw-semibold">
                            {{name}}
                            {{#if assigned_to_me}}
                              <span class="badge bg-success ms-2">Assigned to you</span>
                            {{/if}}
                          </div>
                          {{#if description}}<div class="small text-muted">{{description}}</div>{{/if}}
                        </div>
                        <span class="badge bg-secondary">Seats: {{seats}}</span>
                      </li>
                    {{/each}}
                  {{else}}
                    <li class="list-group-item">
                      <span class="text-muted">No assignment for this slot.</span>
                    </li>
                  {{/if}}
                </ul>
              </div>
            {{/each}}
          {{else}}
          <div class="accordion" id="slots">
            {{#if participant.name}}
            <form action="/event/preferences" method="post">
            {{/if}}
            {{#each view_slots}}
            <div class="accordion-item mb-2" id="slot-{{uuid}}">
              <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#slot-body-{{uuid}}">
                  {{name}} {{#if description}}— {{description}}{{/if}}
                </button>
              </h2>
              <div id="slot-body-{{uuid}}" class="accordion-collapse collapse" data-bs-parent="#slots">
                <div class="accordion-body">
                  {{#if ../is_open}}
                    <ul class="list-group mb-3">
                      {{#each sessions}}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                          <div>
                            <div class="fw-semibold">{{name}}</div>
                            {{#if description}}<div class="small text-muted">{{description}}</div>{{/if}}
                          </div>
                          <span class="badge bg-secondary">Seats: {{seats}}</span>
                        </li>
                      {{/each}}
                    </ul>

                    {{!-- If user has not provided a name yet, block preferences UI --}}
                    {{#if ../participant.name}}
                      {{!-- Current preferences summary with names --}}
                      {{#with selection}}
                        <div class="mb-3">
                          <div class="small text-muted">
                            <span class="me-2">Current preferences:</span>
                            <span>1st = {{#if first_name}}{{first_name}}{{else}}—{{/if}}</span>,
                            <span>2nd = {{#if second_name}}{{second_name}}{{else}}—{{/if}}</span>,
                            <span>3rd = {{#if third_name}}{{third_name}}{{else}}—{{/if}}</span>
                          </div>
                        </div>
                      {{/with}}

                      <div class="row g-3">
                        <div class="col-md-4">
                          <label class="form-label">First choice</label>
                          <select class="form-select" id="sel-first-{{uuid}}" name="first[{{uuid}}]">
                            <option value="">-- none --</option>
                            {{#each sessions}}
                              <option value="{{uuid}}">{{name}}</option>
                            {{/each}}
                          </select>
                        </div>
                        <div class="col-md-4">
                          <label class="form-label">Second choice</label>
                          <select class="form-select" id="sel-second-{{uuid}}" name="second[{{uuid}}]">
                            <option value="">-- none --</option>
                            {{#each sessions}}
                              <option value="{{uuid}}">{{name}}</option>
                            {{/each}}
                          </select>
                        </div>
                        <div class="col-md-4">
                          <label class="form-label">Third choice</label>
                          <select class="form-select" id="sel-third-{{uuid}}" name="third[{{uuid}}]">
                            <option value="">-- none --</option>
                            {{#each sessions}}
                              <option value="{{uuid}}">{{name}}</option>
                            {{/each}}
                          </select>
                        </div>
                      </div>

                      {{#with selection}}
                        <script>
                          document.addEventListener('DOMContentLoaded', function() {
                            var f = document.getElementById('sel-first-{{../uuid}}');
                            var s = document.getElementById('sel-second-{{../uuid}}');
                            var t = document.getElementById('sel-third-{{../uuid}}');
                            var v1 = '{{first}}';
                            var v2 = '{{second}}';
                            var v3 = '{{third}}';
                            if (f && v1 && v1 !== '') f.value = v1;
                            if (s && v2 && v2 !== '') s.value = v2;
                            if (t && v3 && v3 !== '') t.value = v3;
                            if (typeof window.setupSlotUniq === 'function') {
                              window.setupSlotUniq('{{../uuid}}');
                            }
                          });
                        </script>
                      {{/with}}
                      <script>
                        document.addEventListener('DOMContentLoaded', function() {
                          if (typeof window.setupSlotUniq === 'function') {
                            window.setupSlotUniq('{{uuid}}');
                          }
                        });
                      </script>
                    {{else}}
                      <div class="alert alert-warning" role="alert">
                        Please enter and save your name in the "Your profile" section before selecting your preferences.
                      </div>
                    {{/if}}
                  {{else}}
                    <ul class="list-group">
                      {{#if sessions.[0]}}
                        {{#each sessions}}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                          <div>
                            <div class="fw-semibold">
                              {{name}}
                              {{#if assigned_to_me}}
                                <span class="badge bg-success ms-2">Assigned to you</span>
                              {{/if}}
                            </div>
                            {{#if description}}<div class="small text-muted">{{description}}</div>{{/if}}
                          </div>
                          <span class="badge bg-secondary">Seats: {{seats}}</span>
                        </li>
                        {{/each}}
                      {{else}}
                        <li class="list-group-item">
                          <span class="text-muted">No assignment for this slot.</span>
                        </li>
                      {{/if}}
                    </ul>
                  {{/if}}
                </div>
              </div>
            </div>
            {{/each}}
            {{#if participant.name}}
            <div class="mt-3">
              <button type="submit" class="btn btn-sm btn-primary">Save all preferences</button>
            </div>
            </form>
            {{/if}}
          </div>
          {{/if}}
          {{else}}
            <p class="text-muted">No slots yet.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Minimal accordion handler
  (function() {
    var container = document.getElementById('slots');
    if (!container) return;

    function openById(id) {
      var target = document.getElementById(id);
      if (!target) return;
      var btn = container.querySelector('[data-bs-target="#' + CSS.escape(id) + '"]');
      // Close all first (respect data-bs-parent semantics)
      container.querySelectorAll('.accordion-collapse.show').forEach(function(el){ el.classList.remove('show'); });
      container.querySelectorAll('.accordion-button').forEach(function(b){ b.classList.add('collapsed'); });
      target.classList.add('show');
      if (btn) btn.classList.remove('collapsed');
    }

    container.addEventListener('click', function(e) {
      var btn = e.target.closest ? e.target.closest('.accordion-button') : null;
      if (!btn || !container.contains(btn)) return;
      e.preventDefault();
      var selector = btn.getAttribute('data-bs-target');
      if (!selector) return;
      var target = document.querySelector(selector);
      if (!target) return;
      var isOpen = target.classList.contains('show');

      // Close all panels
      container.querySelectorAll('.accordion-collapse.show').forEach(function(el){ el.classList.remove('show'); });
      container.querySelectorAll('.accordion-button').forEach(function(b){ b.classList.add('collapsed'); });

      if (!isOpen) {
        target.classList.add('show');
        btn.classList.remove('collapsed');
        if (target.id) {
          try { history.replaceState(null, '', '#' + target.id); } catch (_) {}
        }
      } else {
        if (location.hash === '#' + target.id) {
          try { history.replaceState(null, '', ' '); } catch (_) {}
        }
      }
    });

    // Open from hash
    if (location.hash && location.hash.length > 1) {
      var id = decodeURIComponent(location.hash.substring(1));
      if (document.getElementById(id)) openById(id);
    }
  })();
</script>
<script>
  // Prevent selecting the same session as multiple preferences within the same slot
  (function() {
    function setupSlotUniq(slotId) {
      var f = document.getElementById('sel-first-' + slotId);
      var s = document.getElementById('sel-second-' + slotId);
      var t = document.getElementById('sel-third-' + slotId);
      if (!f && !s && !t) return;
      var selects = [f, s, t].filter(Boolean);

      function updateDisabled() {
        var chosen = new Set();
        selects.forEach(function(sel){ if (sel.value) chosen.add(sel.value); });
        selects.forEach(function(sel){
          var current = sel.value;
          Array.prototype.forEach.call(sel.options, function(opt){
            if (!opt.value) { opt.disabled = false; return; }
            opt.disabled = chosen.has(opt.value) && opt.value !== current;
          });
        });
      }

      function onChange(ev) {
        var changed = ev.target;
        var val = changed.value;
        if (val) {
          // Clear duplicates in other selects, keep the value in the changed one
          selects.forEach(function(sel){ if (sel !== changed && sel.value === val) sel.value = ''; });
        }
        updateDisabled();
      }

      selects.forEach(function(sel){ sel.addEventListener('change', onChange); });
      // Initial normalization in case server-side prefilled duplicates somehow exist
      (function normalize() {
        var seen = new Set();
        selects.forEach(function(sel){
          if (sel.value) {
            if (seen.has(sel.value)) sel.value = '';
            else seen.add(sel.value);
          }
        });
      })();
      updateDisabled();
    }

    // Expose as a global for per-slot initialization from template
    window.setupSlotUniq = setupSlotUniq;
  })();
</script>
</body>
</html>
